<div class="container">
  <h1>Sign Up!</h1>
  <%= form_for @user do |f| %>
    <!--<%# <%= render 'partials/errors' %>-->
    <div class="form-group">
      <%= f.label "Username" %>
      <%= f.text_field :user_name, class: 'form-control', placeholder: 'username' %>
    </div>
    <div class="form-group">
      <%= f.label "E-Mail" %>
      <%= f.text_field :email, class: 'form-control', placeholder: 'email' %>
    </div>
    <div class="form-group">
      <%= f.label "Age" %>
      <%= f.number_field :age, class: 'form-control', placeholder: 'age' %>
    </div>
    <%=  f.submit class: 'btn btn-primary btn-lg' %>
  <% end %>
</div>
