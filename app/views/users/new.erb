<div class="container">
  <%= form_for @user do |f| %>
    <div class="form-row">
      <div class="row">
        <div class="col">
          <%= f.label :u_name %>
          <%= f.text_field :u_name, class: 'form-control', placeholder: 'username' %>
        </div>
      </div>
    </div>
    <%=  f.submit %>
  <% end %>
</div>
